@model IEnumerable<GestaoPedidosNotificacao.UI.Entities.Entidade>

@{
    ViewBag.Title = "Entidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="card mb-4">
    
    <div class="card-body">
        <span class="float-right"><br />
            @Html.ActionLink("Cadastrar Nova", "Create", null, new { @class = "btn btn-primary" })
            <a href="@Url.Action("PrintEntidades", "Relatorios")" class="btn btn-success">
                <i class="fas fa-download fa-sm text-white-50"></i> Gerar Relatório
            </a>
        </span>
        <table id="dataTable" class="table table-bordered dataTable" style="width:100%">
            <thead>
                <tr role="row">
                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(model => model.Denoninacao): activate to sort column ascending">
                        @Html.DisplayNameFor(model => model.Denoninacao)
                    </th>
                    <th class="sorting" tabindex="2" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(model => model.Denoninacao): activate to sort column ascending">
                        @Html.DisplayNameFor(model => model.DataEntidade)
                    </th>
                    <th class="sorting" tabindex="3" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(model => model.Denoninacao): activate to sort column ascending">
                        @Html.DisplayNameFor(model => model.EntidadeTipo.Nome)
                    </th>
                    <th style="width:180px !important;">Acções</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Denoninacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataEntidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EntidadeTipo.Nome)
                        </td>
                        <td>
                            <a href="@Url.Action("Details","Entidades", new { id=item.Id })" class="btn btn-primary btn-circle">
                                <i class="fas fa-search"></i>
                            </a>
                            <a href="@Url.Action("Edit","Entidades", new { id=item.Id })" class="btn btn-success btn-circle">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Delete","Entidades", new { id=item.Id })" class="btn btn-danger btn-circle">
                                <i class="fas fa-trash"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>