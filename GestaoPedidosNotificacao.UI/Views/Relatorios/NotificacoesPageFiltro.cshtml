@model GestaoPedidosNotificacao.UI.Models.SearchPedidosModel

@{
    ViewBag.Title = "Relatório de Notificações";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mb-4 ml-3 mr-3">

    <div class="card-body">
        @using (Html.BeginForm("PrintNotificacoes", "Relatorios", FormMethod.Get, new { target = "_blank" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.EntidadeNome, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.EntidadeNome, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>


                <div class="col-md-4">
                    @Html.LabelFor(model => model.NumProcesso, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.NumProcesso, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.EstadoId, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.DropDownList("EstadoId", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-2">
                    @Html.Label("Data de Factura", htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.DataFacStart, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="col-md-2">
                    @Html.Label("Data Fim", htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.DataFacEnd, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="col-md-2">
                    @Html.Label("Data de Pagamento", htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.DataPagStart, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="col-md-2">
                    @Html.Label("Data Fim", htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.DataPagEnd, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="col-md-4 ">
                    @Html.Label("Opções", htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        <input type="submit" value="Gerar Relatório" class="btn btn-success" />
                    </div>
                </div>


            </div>


        }
    </div>
</div>



@section Scripts{
    <script>

        $("#DataFacStart").datepicker({
            format: 'dd/mm/yyyy'
        });
        $("#DataFacEnd").datepicker({
            format: 'dd/mm/yyyy'
        });
        $("#DataPagStart").datepicker({
            format: 'dd/mm/yyyy'
        });
        $("#DataPagEnd").datepicker({
            format: 'dd/mm/yyyy'
        });

    </script>

}