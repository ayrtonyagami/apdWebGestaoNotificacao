@model GestaoPedidosNotificacao.UI.Models.SearchEntidadeModel

@{
    ViewBag.Title = "Relatório das Entidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mb-4 ml-3 mr-3">

    <div class="card-body">
        @using (Html.BeginForm("PrintEntidades", "Relatorios", FormMethod.Get, new { target = "_blank" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>


                <div class="col-md-4">
                    @Html.LabelFor(model => model.NIF, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.NIF, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.EntidadeTipoId, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.DropDownList("EntidadeTipoId", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Telefone, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(model => model.DataCadastroStart, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.DataCadastroStart, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.DataCadastroEnd, htmlAttributes: new { @class = "control -label" })
                    <div class="">
                        @Html.EditorFor(model => model.DataCadastroEnd, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="col-md-4 ">
                    @Html.Label("Opções", htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        <input type="submit" value="Gerar Relatório" class="btn btn-success" />
                    </div>
                </div>


            </div>


        }
    </div>
</div>



